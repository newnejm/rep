<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"> 
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://java.sun.com/jsf/html"
      xmlns:f="http://java.sun.com/jsf/core"
      xmlns:ui="http://java.sun.com/jsf/facelets"
      xmlns:p="http://primefaces.org/ui"> 

<ui:composition template="/template/MainContent.xhtml">
<ui:define name="Content">
	<p:panel header="Jour férier">
		<h:form>
			<h:panelGrid columns="2" style="margin-bottom:10px" cellpadding="5">
						<p:outputLabel value="Titre: " />
					    <p:inputText value="#{jourFerierBean.jourferier.title}" required="true" /> 
					    <h:outputLabel for="from" value="De:" />
            			<p:inputMask id="from" value="#{jourFerierBean.jourferier.startDate}" mask="99/99/9999">
		                <f:convertDateTime pattern="dd/MM/yyyy" />
		            	</p:inputMask>
			            <h:outputLabel for="to" value="A:" />
			            <p:inputMask id="to" value="#{jourFerierBean.jourferier.endDate}" mask="99/99/9999">
			                <f:convertDateTime pattern="dd/MM/yyyy" />
			            </p:inputMask>
 			
 					<h:outputLabel for="type" value="Type:" />
					<p:selectOneMenu id="type" value="#{jourFerierBean.jourferier.type}">
            		<f:selectItem itemLabel="International" itemValue="Internationnel" />
			           <f:selectItem itemLabel="National" itemValue="National" />
			           <f:selectItem itemLabel="Régional" itemValue="Régional" />
			           <f:selectItem itemLabel="Réligieux" itemValue="Religieux" />
			           <f:selectItem itemLabel="Autres" itemValue="Autres" />
        				</p:selectOneMenu>
					   
			 </h:panelGrid>
			 
			 <h:commandButton id="btn" value="Ajouter" type="submit" action="#{jourFerierBean.ajouter()}"/>
			</h:form>
</p:panel>

</ui:define>
</ui:composition>
</html>
