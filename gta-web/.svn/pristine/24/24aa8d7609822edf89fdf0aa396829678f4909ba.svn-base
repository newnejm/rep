<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:ui="http://java.sun.com/jsf/facelets"
	xmlns:p="http://primefaces.org/ui">


<ui:composition template="/template/MainContent.xhtml">
<ui:define name="Content">
			<h:form>
    <p:growl id="messages" showDetail="true" />
    <h:panelGrid columnClasses="value" >
        <h3 style="margin-top: 0">Compteur </h3>
            <p:schedule id="schedule" value="#{tacheBean.eventModel}" widgetVar="myschedule" rightHeaderTemplate="" draggable="false" resizable="false">
           </p:schedule>
    </h:panelGrid>
 
    <p:dialog widgetVar="eventDialog" header="Ajout tache" showEffect="clip" hideEffect="clip">
        <h:panelGrid id="eventDetails" columns="2">
               
            <h:outputLabel for="title" value="Title:" />
            <p:inputText id="title" value="#{tacheBean.valeurCompteur.id}" required="true" />
 
            <h:outputLabel for="from" value="From:" />
            <p:inputMask id="from" value="#{tacheBean.valeurCompteur.dateCalc}" mask="99/99/9999">
                <f:convertDateTime pattern="dd/MM/yyyy" />
            </p:inputMask>
 
          
            <p:commandButton type="reset" value="Reset" />
            <p:commandButton id="addButton" value="save" actionListener="#{tacheBean.addEvent}" oncomplete="PF('myschedule').update();PF('eventDialog').hide();" />
        </h:panelGrid>
    </p:dialog>    
    
    
    
</h:form>
 
 
 
 
 
 
